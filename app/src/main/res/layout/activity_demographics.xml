    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:fontFamily="@font/aclonica"
                    android:text="Registered residents:"
                    android:textColor="@color/Random"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/textview23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear6"
                android:layout_marginTop="25sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:fontFamily="@font/aclonica"
                    android:text="Added members:"
                    android:textColor="@color/Random"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/textview25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/random1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear7"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Males"
                    android:fontFamily="@font/aclonica"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random2"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/random1">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="0-17 years"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random3"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/random2">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="18-35 years"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random4"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/random3">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="over 35 years"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random5"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_below="@id/random4">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Females"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random6"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/random5">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="0-17 years"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random7"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/random6">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="18-34 years"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/random8"
                android:padding="5dp"
                android:layout_marginStart="30dp"
                android:orientation="horizontal"
                android:layout_below="@id/random7">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Over 35 years"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="21sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textview40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/random8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/aclonica"
                android:text="Registered individuals"
                android:textColor="@color/white"
                android:textSize="27sp" />


        </RelativeLayout>

    </ScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/scrollView"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5dp"
        android:padding="10sp"
        android:visibility="gone" />

    </RelativeLayout>
</ScrollView>